<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Book Title"
        android:textStyle="bold"
        android:id="@+id/reservationTitle"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/reservationCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reservationTitle"

        android:layout_alignStart="@+id/reservationTitle"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="Book Category"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/reservationCategory"
        android:id="@+id/reservationAuthor"
        android:textStyle="italic"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/reservationTitle"
        android:text="Author"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="$10"
        android:id="@+id/reservationPrice"
        android:layout_marginRight="10dp"/>



</RelativeLayout>
